#ifndef OSGQOPENGL_VERSION_H
#define OSGQOPENGL_VERSION_H

#include <osgQOpenGL/Export>

extern "C" {

#define OSGQOPENGL_MAJOR_VERSION @OSGQOPENGL_MAJOR_VERSION@
#define OSGQOPENGL_MINOR_VERSION @OSGQOPENGL_MINOR_VERSION@
#define OSGQOPENGL_PATCH_VERSION @OSGQOPENGL_PATCH_VERSION@
#define OSGQOPENGL_SOVERSION @OSGQOPENGL_SOVERSION@

/* Convenience macro that can be used to decide whether a feature is present or not i.e.
 * #if OSGQOPENGL_MIN_VERSION_REQUIRED(4,0,0)
 *    your code here
 * #endif
 */
#define OSGQOPENGL_MIN_VERSION_REQUIRED(MAJOR, MINOR, PATCH) ((OSGQOPENGL_MAJOR_VERSION>MAJOR) || (OSGQOPENGL_MAJOR_VERSION==MAJOR && (OSGQOPENGL_MINOR_VERSION>MINOR || (OSGQOPENGL_MINOR_VERSION==MINOR && OSGQOPENGL_PATCH_VERSION>=PATCH))))
#define OSGQOPENGL_VERSION_LESS_THAN(MAJOR, MINOR, PATCH) ((OSGQOPENGL_MAJOR_VERSION<MAJOR) || (OSGQOPENGL_MAJOR_VERSION==MAJOR && (OSGQOPENGL_MINOR_VERSION<MINOR || (OSGQOPENGL_MINOR_VERSION==MINOR && OSGQOPENGL_PATCH_VERSION<PATCH))))
#define OSGQOPENGL_VERSION_LESS_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGQOPENGL_MAJOR_VERSION<MAJOR) || (OSGQOPENGL_MAJOR_VERSION==MAJOR && (OSGQOPENGL_MINOR_VERSION<MINOR || (OSGQOPENGL_MINOR_VERSION==MINOR && OSGQOPENGL_PATCH_VERSION<=PATCH))))
#define OSGQOPENGL_VERSION_GREATER_THAN(MAJOR, MINOR, PATCH) ((OSGQOPENGL_MAJOR_VERSION>MAJOR) || (OSGQOPENGL_MAJOR_VERSION==MAJOR && (OSGQOPENGL_MINOR_VERSION>MINOR || (OSGQOPENGL_MINOR_VERSION==MINOR && OSGQOPENGL_PATCH_VERSION>PATCH))))
#define OSGQOPENGL_VERSION_GREATER_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGQOPENGL_MAJOR_VERSION>MAJOR) || (OSGQOPENGL_MAJOR_VERSION==MAJOR && (OSGQOPENGL_MINOR_VERSION>MINOR || (OSGQOPENGL_MINOR_VERSION==MINOR && OSGQOPENGL_PATCH_VERSION>=PATCH))))

/** Return the osgQOpenGL version number in human-friendly form. */
extern OSGQOPENGL_EXPORT const char* osgQOpenGLGetVersion();

/** The osgGetSOVersion() method returns the osgQOpenGL shared object version number. */
extern OSGQOPENGL_EXPORT const char* osgQOpenGLGetSOVersion();

/** The osgGetLibraryName() method returns the library name in human-friendly form. */
extern OSGQOPENGL_EXPORT const char* osgQOpenGLGetLibraryName();

#define OSGQOPENGL_VERSION_RELEASE OSGQOPENGL_VERSION_PATCH
#define OSGQOPENGL_VERSION_REVISION 0


}

#endif /* OSGQOPENGL_VERSION_H */
